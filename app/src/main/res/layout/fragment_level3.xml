<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.tashm.tilt.Level3Fragment">


    <ImageView
        android:id="@+id/level3Selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/level_3" />

    <ImageView
        android:id="@+id/level3bSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_3b"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"  />

    <ImageView
        android:id="@+id/level3cSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_3c"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/level3Selector"/>

</RelativeLayout>